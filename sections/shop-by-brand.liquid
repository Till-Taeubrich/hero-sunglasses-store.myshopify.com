<style>
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding-top }}px;
    padding-bottom: {{ section.settings.padding-bottom }}px;
    background-image: url('{{ section.settings.background_img | image_url: width: 1000 }}');
    background-position: center;
    background-repeat: no-repeat;
    background-size: cover;
  }

  #shopify-section-{{ section.id }} .brand-list {
    display: grid;
    justify-items: center;
    gap: 20px;
    grid-template-columns: repeat(8, 1fr);
    grid-template-rows: 2fr 1fr 1fr;
  }

  #shopify-section-{{ section.id }} .brand-element {
    background: linear-gradient(134.47deg, rgba(97, 114, 134, 0.6) -2.54%, rgba(97, 114, 134, 0) 104.04%);
    box-shadow: 0px 4px 14px 1px #00000040;
    padding: 2.6rem;
    width: 100%;
    justify-content: center
  }


  #shopify-section-{{ section.id }} .shop-all-btn {
    font-size: 18px;
    font-weight: 700;
    letter-spacing: 0.04em;
    color: var(--lt-color-white);
    background: linear-gradient(135.6deg, rgba(153, 38, 38, 0.4) 1.69%, rgba(153, 38, 38, 0.3) 108.69%),
    linear-gradient(0deg, rgba(204, 51, 51, 0.03), rgba(204, 51, 51, 0.03));
    border: 1px solid #CC333308
    box-shadow: 0px 4px 14px 1px #00000040;
    padding: 2.6rem;
    height: 100%;
    display: flex;
    align-items: center;
    text-decoration: none;
    width: 100%;
    justify-content: center;
    text-align: center;
  }

  #shopify-section-{{ section.id }} .brand-element:first-child {
    grid-column: 1 / 3;
    width: 95%;
  }

  #shopify-section-{{ section.id }} .brand-element:nth-child(2) {
    grid-column: 3 / 5;
    width: 95%;
  }

  #shopify-section-{{ section.id }} .brand-element:nth-child(3) {
    grid-column: 5 / 7;
    width: 95%;
  }

  #shopify-section-{{ section.id }} .brand-element:nth-child(4) {
    grid-column: 7 / 9;
    width: 95%;
  }

  @media (max-width: 1099px) {
    #shopify-section-{{ section.id }} .brand-element:first-child,
    #shopify-section-{{ section.id }} .brand-element:nth-child(2),
    #shopify-section-{{ section.id }} .brand-element:nth-child(3),
    #shopify-section-{{ section.id }} .brand-element:nth-child(4) {
      grid-column: unset;
      width: unset;
    }

    #shopify-section-{{ section.id }} .brand-list {
      grid-template-columns: repeat(4, 1fr);
      grid-auto-rows: 1fr;
    }
  }

  @media (max-width: 550px) {
    #shopify-section-{{ section.id }} .brand-list {
      grid-template-columns: repeat(2, 1fr);
      justify-items: unset;
    }

    #shopify-section-{{ section.id }} .brand-list {
      grid-template-rows: unset;
    }
  }
</style>

<section class="shopify-section section section-shop-by-brand">
  <div class="page-width">
    {% render 'section-headline-box' section: section %}
    <div class="brand-list">
      {% for block in section.blocks %}
        {%- if block.settings.img != blank -%}
          <a {% if block.settings.collection.url %}href="{{ block.settings.collection.url }}"{% endif %} class="brand-element {% if block.settings.img %}img__wrapper{% endif %}">
            {% if block.settings.img %}
            {%- assign img_height = block.settings.img.width | divided_by: block.settings.img.aspect_ratio -%}

            {{ block.settings.img | image_url: width: 1000 | image_tag:
              height: img_height,
              width: block.settings.img.width,
              loading: 'lazy'
            }}
            {% endif %}
          </a>
        {% endif %}
      {% endfor %}
      {% if section.settings.shop_all_btn %}
      <a class="shop-all-btn" href="/collections/all">
        <div>
          SHOP ALL
        </div>
      </a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Shop by brand",
  "presets": [
  {
   "name":"Shop by brand"
  }
  ],
  "settings": [
    {
      "type": "text",
      "id": "box-title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "box-caption",
      "label": "Caption"
    },
    {
      "type": "image_picker",
      "id": "background_img",
      "label": "Background image"
    },
    {
      "type": "checkbox",
      "id": "shop_all_btn",
      "label": "Show shop all btn",
      "default": false
    },
		{
      "type": "range",
      "id": "padding-top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "default": 0
    }
  ],
  "blocks": [
     {
       "name": "brand",
       "type": "brand",
       "settings": [
         {
           "type": "image_picker",
           "id": "img",
           "label": "Logo"
         },
         {
           "type": "url",
           "id": "collection",
           "label": "Collection link"
         }
       ]
     }
   ]
}
{% endschema %}