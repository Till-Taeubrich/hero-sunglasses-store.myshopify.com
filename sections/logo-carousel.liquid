<style>
  #shopify-section-{{ section.id }} .section-logo-carousel {
    overflow: hidden;
    background: white;
    white-space: nowrap;
    position: relative;
  }

  #shopify-section-{{ section.id }} .section-logo-carousel:before,
  #shopify-section-{{ section.id }} .section-logo-carousel:after {
    position: absolute;
    top: 0;
    width: 250px;
    height: 100%;
    content: "";
    z-index: 2;
  }

  #shopify-section-{{ section.id }} .section-logo-carousel:before {
    left: 0;
  }

  #shopify-section-{{ section.id }} .section-logo-carousel:after {
    right: 0;
  }

  /* 
  uncomment for stop-on-hover
  #shopify-section-{{ section.id }} .logos:hover .logos-slide {
    animation-play-state: paused;
  }
  */

  #shopify-section-{{ section.id }} .logos-slide {
    display: inline-block;
    animation: 35s slide infinite linear;
  }

  #shopify-section-{{ section.id }} .logos-slide .img__wrapper {
    height: 110px;
    width: 110px;
    margin: 0 40px;
  }

  @media (min-width: 750px) {
    #shopify-section-{{ section.id }} .logos-slide {
      display: flex;
      justify-content: space-evenly;
    }
  }
</style>

<section class="shopify-section section section-logo-carousel page-width">
  <div class="logos-slide">
    <div class="img__wrapper">{% render 'ray-ban' %}</div>
    <div class="img__wrapper">{% render 'oakley' %}</div>
    <div class="img__wrapper">{% render 'maui-jim' %}</div>
    <div class="img__wrapper">{% render 'costa' %}</div>
    <div class="img__wrapper">{% render 'prada' %}</div>
  </div>
</section>

<script>
if (matchMedia('(max-width: 749px)').matches) {
  const copy = document.querySelector(".logos-slide").cloneNode(true);
  document.querySelector(".section-logo-carousel").appendChild(copy);
}
</script>


{% schema %}
{
  "name": "Logo carousel",
  "presets": [
  {
   "name":"Logo carousel"
  }
  ],
  "settings": [
		{
      "type": "range",
      "id": "padding-top",
      "label": "Padding top",
      "min": 0,
      "max": 100,
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-bottom",
      "label": "Padding bottom",
      "min": 0,
      "max": 100,
      "default": 0
    }
  ],
  "blocks": [
     {
       "name": "logo",
       "type": "logo",
       "settings": [
         {
           "type": "image_picker",
           "id": "img",
           "label": "Logo"
         }
       ]
     }
   ]
}
{% endschema %}