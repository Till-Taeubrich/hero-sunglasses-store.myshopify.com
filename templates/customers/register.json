      ],
      "settings": {
        "html": "<meta charset=\"UTF-8\">\n<meta name=\"viewport\" content=\"width=device-width, initial-scale=1.0\">\n<script src=\"https:\/\/cdn.jsdelivr.net\/npm\/aws-sdk@2.1166.0\/dist\/aws-sdk.min.js\"><\/script>\n\n<style>\n  label {\n    width: 100%;\n    margin-bottom: 5px;\n  }\n\n  input {\n    width: 100%;\n    padding: 8px;\n    margin-bottom: 15px;\n    box-sizing: border-box;\n    border: 1.5px solid #ccc;\n    border-radius: 4px;\n    transition: border-color 0.3s;\n  }\n\n  input.error {\n    border-color: #f00;\n  }\n\n  .error-message {\n    color: #f00;\n    font-size: 14px;\n    margin-top: 5px;\n    display: none;\n  }\n\n  .upload-message {\n    color: darkgreen;\n    font-size: 14px;\n    margin-top: 5px;\n    display: none;\n  }\n\n  .btn-container {\n    display: flex;\n    \/* justify-content: space-evenly; *\/\n    flex-direction: column;\n    gap: 1rem;\n    margin-bottom: 20px;\n  }\n\n  button {\n    color: #fff;\n    padding: 10px;\n    border: none;\n    border-radius: 3px;\n    cursor: pointer;\n    font-weight: bold;\n    letter-spacing: 0.5px;\n  }\n\n  button.black {\n    background-color: black;\n  }\n\n  button.red {\n    background: linear-gradient(\n      to right,\n      #007bff,\n      #0056b3\n    ); \/* Gradient from light blue to dark blue *\/\n    margin-top: 16px;\n    padding: 10px 40px; \/* Increased horizontal padding *\/\n    font-weight: bold; \/* Makes the text bold *\/\n    letter-spacing: 1px; \/* Slightly increases the space between characters *\/\n  }\n\n  #image {\n    display: none;\n  }\n\n  .status-message {\n    display: none;\n  }\n\n  \/* Flex container styles *\/\n  .flex-container {\n    display: flex;\n    justify-content: center;\n    align-items: center;\n    background: black;\n    margin-bottom: 20px;\n    border-radius: 1px;\n    padding: 10px; \/* height: 100vh; Adjust as needed *\/\n  }\n\n  \/* Style for the common container *\/\n  .image-container {\n    position: relative;\n    display: inline-block;\n    margin: 10px; \/* Add margin for spacing between images *\/\n    cursor: pointer; \/* Change cursor on hover to indicate clickability *\/\n  }\n\n  \/* Style for the default image *\/\n  .default-image,\n  .hover-image {\n    max-width: 100%;\n    height: auto;\n    display: block;\n  }\n\n  \/* Style for the hover image *\/\n  .hover-image {\n    opacity: 0; \/* Initially hidden *\/\n    transition: opacity 0.3s ease; \/* Smooth transition *\/\n    position: absolute;\n    top: 50%;\n    left: 50%;\n    transform: translate(-50%, -50%);\n    z-index: 1; \/* Ensure hover image is on top *\/\n  }\n\n  \/* Show hover image on hover and click *\/\n  .image-container:hover .hover-image,\n  .image-container.selected .hover-image {\n    opacity: 1; \/* Make the hover image visible on hover and when selected *\/\n  }\n\n  \/* Success message styles *\/\n  .success-message {\n    display: none;\n    text-align: center;\n    font-weight: bold;\n  }\n  \/* Checkbox styles *\/\n  .checkbox-container {\n    margin-top: 10px;\n    text-align: center;\n  }\n\n  #termsCheckbox {\n    width: 5%;\n  }\n<\/style>\n\n<form id=\"myForm\">\n  <label for=\"firstName\">First Name:<\/label>\n  <input type=\"text\" id=\"firstName\" name=\"firstName\" required=\"\">\n  <div class=\"error-message\" id=\"firstNameError\">This field is required.<\/div>\n\n  <label for=\"lastName\">Last Name:<\/label>\n  <input type=\"text\" id=\"lastName\" name=\"lastName\" required=\"\">\n  <div class=\"error-message\" id=\"lastNameError\">This field is required.<\/div>\n\n  <label for=\"phoneNumber\">Phone Number:<\/label>\n  <input type=\"text\" id=\"phoneNumber\" name=\"phoneNumber\" required=\"\">\n  <div class=\"error-message\" id=\"phoneNumberError\">This field is required.<\/div>\n\n  <label for=\"email\">Email:<\/label>\n  <input type=\"email\" id=\"email\" name=\"email\" required=\"\">\n  <div class=\"error-message\" id=\"emailError\">This field is required.<\/div>\n\n  <label for=\"password\">Password:<\/label>\n  <input type=\"password\" id=\"password\" name=\"password\" required=\"\">\n  <div class=\"error-message\" id=\"passwordError\">This field is required.<\/div>\n\n  <label for=\"confirmPassword\">Confirm Password:<\/label>\n  <input type=\"password\" id=\"confirmPassword\" name=\"confirmPassword\" required=\"\">\n  <div class=\"error-message\" id=\"confirmPasswordError\">\n    This field is required.\n  <\/div>\n\n  <div>\n    <div style=\"text-align: center\" affiliation-header=\"\">\n      SELECT YOUR AFFILIATION\n    <\/div>\n  <\/div>\n  <div class=\"flex-container\">\n    <div class=\"image-container\" onclick=\"handleImageClick(this, 'Police')\">\n      <!-- Default image -->\n      <img src=\"https:\/\/notifygridmedia.s3.us-east-2.amazonaws.com\/img\/log2\/9.png\" alt=\"police\" class=\"default-image\">\n\n      <!-- Hover image -->\n      <img src=\"https:\/\/notifygridmedia.s3.us-east-2.amazonaws.com\/img\/log2\/10.png\" alt=\"police\" class=\"hover-image\">\n    <\/div>\n\n    <div class=\"image-container\" onclick=\"handleImageClick(this, 'Millitary')\">\n      <!-- Default image -->\n      <img src=\"https:\/\/notifygridmedia.s3.us-east-2.amazonaws.com\/img\/log2\/11.png\" alt=\"Millitary\" class=\"default-image\">\n\n      <!-- Hover image -->\n      <img src=\"https:\/\/notifygridmedia.s3.us-east-2.amazonaws.com\/img\/log2\/12.png\" alt=\"Millitary\" class=\"hover-image\">\n    <\/div>\n\n    <div class=\"image-container\" onclick=\"handleImageClick(this, 'Medical')\">\n      <!-- Default image -->\n      <img src=\"https:\/\/notifygridmedia.s3.us-east-2.amazonaws.com\/img\/log2\/1.png\" alt=\"medical\" class=\"default-image\">\n\n      <!-- Hover image -->\n      <img src=\"https:\/\/notifygridmedia.s3.us-east-2.amazonaws.com\/img\/log2\/2.png\" alt=\"medical\" class=\"hover-image\">\n    <\/div>\n\n    <div class=\"image-container\" onclick=\"handleImageClick(this, 'Government')\">\n      <img src=\"https:\/\/notifygridmedia.s3.us-east-2.amazonaws.com\/img\/log2\/5.png\" alt=\"gov\" class=\"default-image\">\n\n      <img src=\"https:\/\/notifygridmedia.s3.us-east-2.amazonaws.com\/img\/log2\/6.png\" alt=\"gov\" class=\"hover-image\">\n    <\/div>\n\n    <div class=\"image-container\" onclick=\"handleImageClick(this, 'Fire &amp; EMS')\">\n      <img src=\"https:\/\/notifygridmedia.s3.us-east-2.amazonaws.com\/img\/log2\/3.png\" alt=\"ems\" class=\"default-image\">\n\n      <img src=\"https:\/\/notifygridmedia.s3.us-east-2.amazonaws.com\/img\/log2\/4.png\" alt=\"ems\" class=\"hover-image\">\n    <\/div>\n\n    <div class=\"image-container\" onclick=\"handleImageClick(this, 'Educators')\">\n      <img src=\"https:\/\/notifygridmedia.s3.us-east-2.amazonaws.com\/img\/log2\/7.png\" alt=\"educators\" class=\"default-image\">\n\n      <img src=\"https:\/\/notifygridmedia.s3.us-east-2.amazonaws.com\/img\/log2\/8.png\" alt=\"educators\" class=\"hover-image\">\n    <\/div>\n  <\/div>\n  <p id=\"selectedMessage\"><\/p>\n\n  <div class=\"btn-container\">\n    <button class=\"black\" id=\"btn-ID\" type=\"button\" onclick=\"triggerInputClick('ID')\">\n      Take a Picture of your Employee Photo ID\n    <\/button>\n    <div class=\"status-message\" id=\"id-uploaded\">\n      Photo ID has been uploaded.\n    <\/div>\n    <button class=\"black\" id=\"btn-selfie\" type=\"button\" onclick=\"triggerInputClick('SELFIE')\">\n      Take a Selfie\n    <\/button>\n    <div class=\"status-message\" id=\"selfie-uploaded\">\n      Selfie has been uploaded.\n    <\/div>\n  <\/div>\n\n  <input type=\"file\" id=\"image\" accept=\"image\/*\" capture=\"camera\" name=\"image\">\n\n  <div class=\"upload-message\" id=\"uploadMessage\">\n    Image uploading please wait...\n  <\/div>\n  <div>\n    <!-- Checkbox for terms and conditions -->\n    <div class=\"checkbox-container\" style=\"text-align: left\">\n      <input type=\"checkbox\" id=\"termsCheckbox\" checked>\n      <label for=\"termsCheckbox\">I agree to the\n        <a target=\"_\" href=\"https:\/\/hero-sunglasses-store.myshopify.com\/policies\/terms-of-service\">Terms of Service<\/a>\n        and\n        <a target=\"_\" href=\"https:\/\/hero-sunglasses-store.myshopify.com\/policies\/privacy-policy\">Privacy Policy<\/a>\n      <\/label>\n    <\/div>\n    <button class=\"red\" type=\"button\" onclick=\"validateForm()\">\n      Create Account\n    <\/button>\n\n    <div class=\"success-message\" id=\"successMessage\">\n      <p>\n        We will send you a email &amp; SMS confirming your registration within 2\n        minutes!\n      <\/p>\n    <\/div>\n    <script>\n      var gIDURL = '';\n      var selfieURL = '';\n      var whatImageAmIUploading = '';\n      var folder = 'img\/';\n\n      var userObject = {\n        FirstName: '',\n        LastName: '',\n        PhoneNumber: '',\n        Email: '',\n        Password: '',\n        Affiliation: '',\n        GovernmentIdURL: '',\n        SelfieURL: '',\n        Status: null,\n      };\n\n      document\n        .querySelectorAll('.image-container')\n        .forEach(function (container) {\n          container.addEventListener('click', function () {\n            \/\/ Toggle the 'clicked' class on the clicked container\n            container.classList.toggle('clicked');\n          });\n        });\n\n      \/\/ Function to handle image click\n      function handleImageClick(container, selected) {\n        \/\/ Remove 'selected' class from all other containers\n        document\n          .querySelectorAll('.image-container')\n          .forEach(function (otherContainer) {\n            if (otherContainer !== container) {\n              otherContainer.classList.remove('selected');\n            }\n          });\n\n        \/\/ Toggle the 'selected' class on the clicked container\n        container.classList.toggle('selected');\n        \/\/ console.log(selected);\n        userObject.Affiliation = selected;\n\n        const messageElement = document.getElementById('selectedMessage');\n\n        messageElement.textContent = `Selected: ${selected}`;\n      }\n\n      \/\/ Attach event listener to trigger uploadFile function on file selection\n      document.getElementById('image').addEventListener('change', uploadFile);\n\n      function triggerInputClick(photoCategory) {\n        whatImageAmIUploading = photoCategory;\n        document.getElementById('image').click();\n      }\n\n      \/\/ Function to upload a file to S3\n      async function uploadFile() {\n        \/\/ add logic to determine which input to show this below...\n        var uploadSucess = document.getElementById('uploadMessage');\n        uploadSucess.innerText = 'Image uploading please wait...';\n        uploadSucess.style.display = 'block';\n\n        var data;\n        const fileInput = document.getElementById('image');\n        const file = fileInput.files[0];\n        const contentType = file.type;\n\n        const params = {\n          Bucket: 'notifygridmedia',\n          Key: folder + file.name,\n          Body: file,\n          ACL: 'public-read',\n          ContentType: contentType,\n        };\n\n        if (file) {\n          const s3 = new AWS.S3();\n\n          try {\n            data = await s3.upload(params).promise();\n            \/\/ console.log('File uploaded successfully:', data);\n\n            uploadSucess.innerText =\n              'Image was uploaded successfully. You may now continue!';\n            debugger;\n            if (whatImageAmIUploading === 'ID') {\n              \/\/ display id url and message and set url to object\n              userObject.GovernmentIdURL = data.Location;\n              const div = document.getElementById('id-uploaded');\n              div.style.display = 'block';\n            } else if (whatImageAmIUploading === 'SELFIE') {\n              \/\/ display id url and message and set url to object\n              userObject.SelfieURL = data.Location;\n              const div = document.getElementById('selfie-uploaded');\n              div.style.display = 'block';\n            }\n\n            \/\/ alert('File uploaded successfully. Public URL: ' + data.Location);\n          } catch (error) {\n            console.log(error);\n            console.error('Error uploading file:', error);\n            alert('Error uploading file. Please try again.');\n\n            uploadSucess.innerText =\n              'FAILED: Image was NOT uploaded successfully. please refresh the page and try again.';\n          }\n        } else {\n          alert('Please select a file to upload.');\n        }\n      }\n\n      function validateForm() {\n        var firstName = document.getElementById('firstName').value;\n        var lastName = document.getElementById('lastName').value;\n        var phoneNumber = document.getElementById('phoneNumber').value;\n        var email = document.getElementById('email').value;\n        var password = document.getElementById('password').value;\n        var confirmPassword = document.getElementById('confirmPassword').value;\n\n        validateInput('firstName', firstName);\n        validateInput('lastName', lastName);\n        validateInput('phoneNumber', phoneNumber);\n        validateInput('email', email);\n        validateInput('password', password);\n        validateInput('confirmPassword', confirmPassword);\n\n        \/\/ Check if password and confirm password match\n        var confirmPasswordField = document.getElementById('confirmPassword');\n        var confirmPasswordError = document.getElementById(\n          'confirmPasswordError'\n        );\n\n        if (password !== confirmPassword) {\n          confirmPasswordField.classList.add('error');\n          confirmPasswordError.innerText = 'Passwords do not match.';\n          confirmPasswordError.style.display = 'block';\n        } else {\n          confirmPasswordField.classList.remove('error');\n          confirmPasswordError.innerText = '';\n          confirmPasswordError.style.display = 'none';\n        }\n\n        if (userObject.Affiliation === '') {\n          alert('Please select an Affiliation.');\n          return;\n        }\n\n        const termsCheckbox = document.getElementById('termsCheckbox');\n\n        if (userObject.GovernmentIdURL === '' || userObject.selfieURL === '') {\n          alert('Please upload a picture of your employee ID and a selfie.');\n          return;\n        } else if (userObject.PhoneNumber) {\n          alert('Please accept the terms and conditions');\n        } else if (!termsCheckbox.checked) {\n          alert('Please accept the terms and conditions');\n        } else {\n          if (!document.querySelectorAll('.error').length) {\n            \/\/ If all validations pass, you can submit the form or perform other actions\n            userObject.FirstName = firstName;\n            userObject.LastName = lastName;\n            userObject.PhoneNumber = phoneNumber;\n            userObject.Email = email;\n            userObject.Password = password;\n\n            \/\/ console.log(userObject);\n\n            fetch('https:\/\/yourhope.io\/api\/GUser\/PostGUser', {\n              method: 'POST',\n              headers: {\n                'Content-Type': 'application\/json',\n              },\n              body: JSON.stringify(userObject),\n            })\n              .then((response) => response.json())\n              .then((data) => {\n                const form = document.getElementById('myForm');\n                const successMessage =\n                  document.getElementById('successMessage');\n\n                form.style.display = 'none';\n                successMessage.style.display = 'block';\n                \/\/ console.log(data);\n                \/\/ debugger;\n              })\n              .catch((error) => {\n                console.error('Error:', error);\n              });\n\n            \/\/here now create API request to save this object to RL Platform API\n            alert('Form submitted successfully');\n\n            \/\/ Add code to submit the form or perform other actions\n          }\n        }\n      }\n\n      function validateInput(fieldId, value) {\n        var field = document.getElementById(fieldId);\n        var errorElement = document.getElementById(fieldId + 'Error');\n\n        if (value.trim() === '') {\n          field.classList.add('error');\n          errorElement.style.display = 'block';\n        } else {\n          field.classList.remove('error');\n          errorElement.style.display = 'none';\n        }\n      }\n\n      \/\/ Add event listeners for blur events to trigger validation\n      document\n        .getElementById('firstName')\n        .addEventListener('blur', function () {\n          validateInput('firstName', this.value);\n        });\n\n      document.getElementById('lastName').addEventListener('blur', function () {\n        validateInput('lastName', this.value);\n      });\n\n      document\n        .getElementById('phoneNumber')\n        .addEventListener('blur', function () {\n          validateInput('phoneNumber', this.value);\n        });\n\n      document.getElementById('email').addEventListener('blur', function () {\n        validateInput('email', this.value);\n      });\n\n      document.getElementById('password').addEventListener('blur', function () {\n        validateInput('password', this.value);\n      });\n\n      document\n        .getElementById('confirmPassword')\n        .addEventListener('blur', function () {\n          validateInput('confirmPassword', this.value);\n        });\n    <\/script>\n  <\/div>\n<\/form>",
